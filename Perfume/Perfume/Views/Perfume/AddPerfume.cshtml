@model AddPerfumeModel
@{
    ViewData["Title"] = "AddPerfume";
    ViewData["HasFooter"] = false;
}

<section class="custom-container-sm mx-auto px-2 pt-3">
    <h2 class="text-center mt-3">Adauga un parfum</h2>
    @using (Html.BeginForm("AddPerfume", "Perfume", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="d-flex flex-column gap-2">
            @Html.ValidationSummary(true, "", new
            {
                @class="text-danger"
            })
            <div class="form-group">
                @Html.LabelFor(model => model.PerfumeName)
                @Html.EditorFor(model => model.PerfumeName, new
                {
                    htmlAttributes = new
                    {
                        placeholder = "Introduceți numele parfumului",
                        @class = "form-control",
                    }
                })
                @Html.ValidationMessageFor(model => model.PerfumeName, "", new
                {
                    @class = "text-danger"
                })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Brand)
                @Html.DropDownListFor(model => model.Brand, new SelectList(ViewBag.Brands, "Value", "Text"), new
                {
                    @class = "form-control"
                })
                @Html.ValidationMessageFor(model => model.Brand, "", new
                {
                    @class = "text-danger"
                })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Category)
                @Html.DropDownListFor(model => model.Category, new SelectList(ViewBag.Categories, "Value", "Text"), new
                    {
                        @class = "form-control"
                    })
                @Html.ValidationMessageFor(model => model.Category, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Stock)
                @Html.EditorFor(model => model.Stock, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceți stocul parfumului",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.Stock, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                @Html.EditorFor(model => model.Description, new
                {
                    htmlAttributes = new
                    {
                        placeholder = "Introduceți descrierea parfumului",
                        @class = "form-control",
                    }
                })
                @Html.ValidationMessageFor(model => model.Description, "", new
                {
                    @class = "text-danger"
                })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Currency)
                @Html.EditorFor(model => model.Currency, new
                    {
                        htmlAttributes = new
                        {
                            placeholder = "Introduceti moneda",
                            @class = "form-control",
                        }
                    })
                @Html.ValidationMessageFor(model => model.Currency, "", new
                    {
                        @class = "text-danger"
                    })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Price)
                @Html.EditorFor(model => model.Price, new
                {
                    htmlAttributes = new
                    {
                        placeholder = "Introduceți pretul parfumului",
                        @class = "form-control",
                    }
                })
                @Html.ValidationMessageFor(model => model.Price, "", new
                {
                    @class = "text-danger"
                })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Image)
                @Html.EditorFor(model => model.Image, new
                {
                    htmlAttributes = new
                    {
                        placeholder = "Incarcati imaginea",
                        @class = "form-control",
                    }
                })
                @Html.ValidationMessageFor(model => model.Image, "", new
                {
                    @class = "text-danger"
                })
            </div>

            <button type="submit" class="btn btn-outline-dark text-black rounded-pill">Adauga in lista de parfumuri</button>
        </div>
    }
</section>  