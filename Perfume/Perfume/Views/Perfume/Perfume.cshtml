@model PerfumeModel

<div class="d-flex flex-row justify-content-between mt-4">
    <div class="d-flex flex-column w-50" style="height: 300px; width: 200px;">
        <img src="@Model.DisplayImage" class="rounded mx-auto d-block" style="height: 300px; width: 200px;" alt="img">
        <div>
            <h5>Descriere @Model.BrandTitle @Model.PerfumeTitle</h5><br />
            <div class="d-flex flex-column position-relative">
                @Model.Description
            </div>
        </div>
    </div>
    <div class="card border-0 d-flex w-50">
        <div>
            <a asp-area="" asp-controller="Brands" asp-action="Brand" asp-route-name="@Model.BrandTitle" class="text-decoration-none text-black">
                <span class="d-flex flex-row align-items-baseline gap-2">
                    <h3>@Model.BrandTitle</h3>
                    <p><em>@Model.PerfumeTitle</em></p>
                </span>
            </a>
            <div class="ratings d-flex align-items-center">
                <i class="fa fa-star rating-color"></i>
                <i class="fa fa-star rating-color"></i>
                <i class="fa fa-star rating-color"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
            </div><br />
            <div class="d-flex justify-content-between">
                <p>100 ml</p>
                <h3><strong>@Model.Price @Model.Currency</strong></h3>
            </div>
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center  pb-1 mb-2 border-bottom"></div>
            <div class="d-flex flex-column gap-2">
                <div class="d-flex flex-row">
                    <select class="select rounded-start">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                @using (Html.BeginForm("AddToShoppingCart", "Perfume", FormMethod.Post))
                    {
                        @Html.HiddenFor(x => x.Id)
                        <button class="btn-danger" style="height: 40px; width: 590px" type="submit" title="Adaugă în coș">
                            Cumpără
                        </button>
                    }
                </div>
                <div class="wishlist">
                    @using (Html.BeginForm("AddToWishList", "Perfume", FormMethod.Post))
                    {
                        @Html.HiddenFor(x => x.Id)
                        <button class="btn-outline-danger" type="submit" style="height: 40px; width: 630px; color:black" title="Adaugă în lista de dorințe">
                            <i class="fa fa-heart-o fs-5"></i>
                            <span>Adaugă în lista de dorințe</span>
                        </button>
                    }
                </div>
                <div class="container ">
                    <div class="d-flex flex-row justify-content-between">
                        <div class="d-flex flex-row align-items-baseline gap-2">
                            <input type="checkbox" id="demoCheckbox" name="checkbox" value="1">
                            <div class="d-flex flex-column">
                                <label for="demoCheckbox"><b>Gravură personalizată</b></label>
                                <a class="text-muted" href="#"> Doresc să aflu despre gravură mai multe.</a>
                            </div>
                        </div>
                        <label> 20 RON</label>
                    </div>
                </div>
            </div>
            <br/>
            <div class="d-flex flex-row gap-3" style="font-size: 1rem;">
                <i class="bi bi-truck"><b>  Cargus</b></i>
                <div class="text-muted"> Începând de mâine.</div>
            </div>
            <br/>
            <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Scrie evaluare
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Rating general</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Inchide"></button>
                        </div>
                        <div class="modal-body">
                            <span class="badge bg-dark">Pentru a putea verifica recenzia autentificați-vă mai întâi.</span>
                        </div>


                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Inchide</button>
                            <button type="button" class="btn btn-dark">Trimite</button>
                        </div>
                    </div>
                </div>
            </div>
            <div>

                @*@await Html.PartialAsync("Components/Review")*@
            </div>
        </div>
    </div>
</div>

