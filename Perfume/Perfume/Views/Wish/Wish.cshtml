@model List<WishModel>

<div class="container">
    <div class="title-cart">Lista de dorințe</div>
</div>
@if (Model.Count() <= 0)
{
    <div class="container align-items-center p-5 g-5">
        <b>Nu aveți încă produse preferate</b>
        <br/>
        <strong>Doar faceți click pe simbolul inimii la produsele dumneavoastră preferate.</strong>
        <br/>
        <br/>
        <i class="fa fa-heart-o fa-2x"></i>
    </div>
}
<div class="row p-2 g-4">
    @foreach (var perfume in Model)
    {
        @await Html.PartialAsync("Components/WishCard", perfume)
    }
</div>
<a asp-area="" asp-controller="Perfume" asp-action="Perfumes" type="button" class="btn btn-outline-dark ">Înapoi la cumpărături</a>


