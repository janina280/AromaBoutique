@model PerfumeModel

<div class="card shadow bg-white rounded-end border-0">
    <div class="card-body">
        <div class="container">
            <img src="@Url.Content(Model.ImageSource)" alt="Perfume Image"></img>
        </div>
        <div class="d-flex flex-column">
            <h5 class="card-title">@Model.BrandTitle</h5>
            <h6 class="">@Model.PerfumeTitle</h6>
            <h6 class="font-weight-bold">@Model.Price @Model.Currency</h6>
            <div class="action_links d-flex justify-content-center">
                <ul class="list-unstyled d-flex gap-4">
                    <li class="add_to_cart">
                        <a class="button-custom-hover" href="#" title="Adaugă în coș">
                            <i class="fa fa-shopping-cart fa-2x"></i>
                        </a>
                    </li>
                    <li class="wishlist">
                        <a class="button-custom-hover" href="#" title="Adaugă în lista de dorințe">
                            <i class="fa fa-heart-o fa-2x"></i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="ratings d-flex justify-content-between align-items-center">
                <i class="fa fa-star rating-color"></i>
                <i class="fa fa-star rating-color"></i>
                <i class="fa fa-star rating-color"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
            </div>
        </div>
        <a class="stretched-link" asp-area="" asp-controller="Component" asp-action="Component"></a>
    </div>
</div>