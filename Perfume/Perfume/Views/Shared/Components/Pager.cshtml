@model Pager

<div class="container">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Perfumes" asp-controller="Perfume" asp-route-pg="1" asp-route-sortOrder="@Model.Sort">First</a>
                </li>
                <li>
                    <a class="page-link" asp-action="Perfumes" asp-controller="Perfume" asp-route-pg="@(Model.CurrentPage-1)" asp-route-sortOrder="@Model.Sort">Previous</a>
                </li>
            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Perfume" asp-action="Perfumes" asp-route-pg="@pge" asp-route-sortOrder="@Model.Sort">@pge</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Perfumes" asp-controller="Perfume" asp-route-pg="@(Model.CurrentPage + 1)" asp-route-sortOrder="@Model.Sort">Next</a>
                </li>
                <li>
                    <a class="page-link" asp-action="Perfumes" asp-controller="Perfume" asp-route-pg="@(Model.TotalPages)" asp-route-sortOrder="@Model.Sort">Last</a>
                </li>
            }
        </ul>
    }
</div>