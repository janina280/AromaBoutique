@model CartModel

<div class="card ">
    <div class="card-body">
        <hr/>
        <div class="d-flex flex-row align-items-center gap-5">
            <a href="#" class="d-flex flex-row align-items-center gap-xxl-5">
                <img src="@Url.Content(Model.ImageSource)" alt="Perfume Image"/>
                <div class="gap-5" style="color: black;">
                    <h4>@Model.BrandTitle @Model.PerfumeTitle</h4>
                    <h5>@Model.Category</h5>
                </div>
            </a>
            <div class="d-flex flex-row align-items-center p-5">
            <h4><strong>@Model.Price</strong></h4>
            <h4><strong>@Model.Currency</strong></h4>
            <select class="select rounded-start gap-5">
                @for (int i = 1; i <= 10; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
            </div>
            <div class="d-flex flex-row align-items-center gap-5">
                <strong>@(Model.Price * 2) </strong>
                <strong>@Model.Currency</strong>
                <div class="gap-5">
                    <a href="#" style="color: black;">Șterge</a>
                </div>
            </div>
        </div>
    </div>
</div>