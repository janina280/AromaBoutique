@model List<PromotionModel>

<div id="carouselExampleRide" class="carousel slide" data-bs-ride="true">
    <div class="carousel-inner">
        <div class="carousel-item active p-0">
            <img src="@Model.FirstOrDefault()?.Image" class="d-block w-100" alt="Oferta">
        </div>
        <span>@Model.FirstOrDefault()?.Description</span>
        @foreach (var promotion in Model.Skip(1))
        {
            <div class="carousel-item">
                <img src="@promotion.Image" class="d-block w-100" alt="Oferta">
            </div>
            <span>@promotion.Description</span>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleRide" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
